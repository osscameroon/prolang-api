{
  "extends": ["next", "next/core-web-vitals", "prettier", "plugin:jest-dom/recommended"],
  "plugins": ["testing-library", "jest-dom", "use-encapsulation"],
  "rules": {
    "quotes": ["warn", "single"],
    "semi": "warn",
    "no-var": "warn",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-multi-spaces": "warn",
    "space-in-parens": "warn",
    "no-multiple-empty-lines": "warn",
    "prefer-const": "warn",
    "no-use-before-define": "warn",
    "max-len": [
      "warn", 120, {
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "prefer-template": "warn",
    "object-shorthand": "warn",
    "newline-after-var": [
      "warn", "always"
    ],
    "curly": "warn",
    "no-case-declarations": "warn",
    "space-infix-ops": "warn",
    "newline-before-return": "warn",
    "object-curly-spacing": ["warn", "always"],
    "sort-keys": "warn",
    "react/destructuring-assignment": "warn",
    "react/display-name": "warn",
    "react/prop-types": "warn",
    "react/sort-prop-types": "warn",
    "react/no-unescaped-entities": "off",
    "use-encapsulation/prefer-custom-hooks": [
      "error",
      { "allow": ["useCallback", "useState", "useRef", "useEffect"] }
    ]
  }
}
